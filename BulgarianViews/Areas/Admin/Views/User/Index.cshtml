@using BulgarianViews.Web.ViewModels.Admin
@model List<UserViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h1 class="text-center">Manage Users</h1>

<div class="container mt-4">
    @if (Model.Any())
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>#</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge badge-primary">@role</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "User", new { id = user.Id, area = "Admin" })" class="btn btn-warning btn-sm">Edit</a>

                            <form asp-action="Delete" asp-controller="User" method="post" asp-area="Admin" class="d-inline-block">
                                <input type="hidden" name="id" value="@user.Id" />
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">No users found.</p>
    }
</div>
