@model BulgarianViews.Web.ViewModels.Profile.ProfileViewModel

<h1 class="text-center my-4">My Profile</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-primary text-white">
                    <h2 class="mb-0">@Model.UserName</h2>
                    
                </div>
                <div class="card-body text-center">
                    
                    <div class="mb-4">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureURL))
                        {
                            <img src="@Model.ProfilePictureURL" alt="Profile Picture" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <img src="/images/default-profile.png" alt="Default Profile Picture" class="rounded-circle shadow" style="width: 150px; height: 150px; object-fit: cover;">
                        }
                    </div>

                    
                    <div class="mb-4">
                        <h5 class="text-primary">Bio</h5>
                        <p class="text-muted">
                            @Model.Bio 
                        </p>
                    </div>

                   
                    <a asp-action="Edit" class="btn btn-outline-primary btn-sm px-4">Edit Profile</a>
                </div>
                <div class="card-footer bg-light text-center">
                    <small class="text-muted">&copy; 2024 BulgarianViews. All rights reserved.</small>
                </div>
            </div>
        </div>
    </div>
</div>
