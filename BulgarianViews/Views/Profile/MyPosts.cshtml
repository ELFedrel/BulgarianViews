@model IEnumerable<BulgarianViews.Web.ViewModels.Profile.MyPostViewModel>

<h1 class="text-center my-4">My Posts</h1>

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img src="@post.PhotoURL" class="card-img-top" alt="@post.Title" style="max-height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@post.Title</h5>
                        <p class="card-text text-muted">
                            @post.Description.Substring(0, Math.Min(post.Description.Length, 100))...
                        </p>
                        <p class="card-text">
                            <strong>Average Rating:</strong> @post.AverageRating.ToString("0.0") / 5
                        </p>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Details" asp-controller="LocationPost" asp-route-id="@post.Id" class="btn btn-info btn-sm">View Details</a>
                        <a asp-action="Edit" asp-controller="LocationPost" asp-route-id="@post.Id" class="btn btn-warning btn-sm">Edit</a>
                        <form asp-action="Delete" asp-controller="LocationPost" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@post.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
