@using System.Security.Claims
@model BulgarianViews.Web.ViewModels.LocationPost.LocationPostDetailsViewModel

@{
    ViewData["Title"] = "Details - " + Model.Title;
}

<h1 class="text-center my-4">Details for @Model.Title</h1>

<div class="card shadow-lg mb-4">
    <img src="@Model.PhotoURL" class="card-img-top" alt="@Model.Title" style="max-height: 300px; object-fit: cover;">
    <div class="card-body">
        <h5 class="card-title">Description</h5>
        <p class="card-text">@Model.Description</p>
        <hr />
        <p class="card-text">
            <strong>Tag:</strong> @Model.TagName
        </p>
        <p class="card-text">
            <strong>Posted by:</strong>
            <a asp-controller="Profile" asp-action="Details" asp-route-id="@Model.PublisherId">
                @Model.UserName
            </a>
        </p>

        <p class="card-text">
            <strong>Average Rating:</strong> @Model.AverageRating.ToString("0.0") / 5
        </p>

       
        <section class="mb-4">
            <h5>Rate This Post</h5>
            <form asp-action="Rate" asp-controller="Rating" method="post" class="mt-3">
                <input type="hidden" name="postId" value="@Model.Id" />
                <div class="rating d-flex align-items-center" id="star-rating">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <label class="me-2">
                            <input type="radio" name="rating" value="@i" class="d-none" onclick="updateStars(@i)" />
                            <span class="star" data-value="@i" style="cursor: pointer; font-size: 1.5rem; color: gray;">★</span>
                        </label>
                    }
                </div>
                <button type="submit" class="btn btn-success btn-sm mt-2">Submit Rating</button>
            </form>
        </section>
    </div>
</div>

<!-- Comments Section -->
<section class="mb-4">
    <h5>Comments</h5>
    @if (!Model.Comments.Any())
    {
        <p>No comments yet. Be the first to comment!</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var comment in Model.Comments)
            {
                <li class="list-group-item">
                    <p class="mb-1">@comment.Content</p>
                    <small class="text-muted">
                        Posted by
                        <a asp-controller="Profile" asp-action="Details" asp-route-id="@comment.UserId">
                            <strong>@comment.UserName</strong>
                        </a>
                        on @comment.DateCreated.ToString("yyyy-MM-dd HH:mm")
                    </small>

                    @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == comment.UserId.ToString())
                    {
                        <form asp-action="Delete" asp-controller="Comment" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@comment.Id" />
                            <input type="hidden" name="postId" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    }
                </li>
            }
        </ul>
    }
</section>

<!-- Add Comment Section -->
<section class="mb-4">
    <h5>Add a Comment</h5>
    <form asp-action="Add" asp-controller="Comment" method="post">
        <input type="hidden" name="LocationPostId" value="@Model.Id" />
        <div class="form-group mb-2">
            <textarea class="form-control" name="Content" rows="3" placeholder="Write your comment here..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Add Comment</button>
    </form>
</section>

@if (User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier) == Model.PublisherId)
{
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm mt-3">Edit Post</a>
}


@if (User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier) == Model.PublisherId)
{
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete Post</a>
}

<a href="@Url.Action("Index", "LocationPost")" class="btn btn-secondary mt-3">Back to List</a>

@section Scripts {
    <script>
        function updateStars(selectedRating) {
            const stars = document.querySelectorAll("#star-rating .star");
            stars.forEach(star => {
                const value = parseInt(star.getAttribute("data-value"));
                star.style.color = value <= selectedRating ? "gold" : "gray";
            });
        }
    </script>
}
