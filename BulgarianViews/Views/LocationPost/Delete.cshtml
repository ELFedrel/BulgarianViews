@model BulgarianViews.Web.ViewModels.LocationPost.LocationPostDeleteViewModel

@{
    ViewData["Title"] = "Delete Post";
}

<h1 class="text-center text-danger my-4">Delete Post</h1>

<div class="card shadow-lg mb-4">
    <div class="card-body">
        <h5 class="card-title">Are you sure you want to delete this post?</h5>
        <p class="card-text">
            <strong>Title:</strong> @Model.Title
        </p>
        <p class="card-text">
            <strong>Description:</strong> @Model.Description
        </p>
    </div>
    <div class="card-footer d-flex justify-content-between">
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Confirm Delete</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</div>
